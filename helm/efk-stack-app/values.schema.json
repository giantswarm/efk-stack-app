{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "elasticsearch-curator": {
            "type": "object",
            "properties": {
                "command": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "configMaps": {
                    "type": "object",
                    "properties": {
                        "action_file_yml": {
                            "type": "string"
                        },
                        "config_yml": {
                            "type": "string"
                        }
                    }
                },
                "enabled": {
                    "type": "boolean"
                },
                "env": {
                    "type": "object",
                    "properties": {
                        "ELASTIC_CREDS": {
                            "type": "string"
                        }
                    }
                },
                "envFromSecrets": {
                    "type": "object",
                    "properties": {
                        "ELASTIC_PASS": {
                            "type": "object",
                            "properties": {
                                "from": {
                                    "type": "object",
                                    "properties": {
                                        "key": {
                                            "type": "string"
                                        },
                                        "secret": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        },
                        "ELASTIC_USER": {
                            "type": "object",
                            "properties": {
                                "from": {
                                    "type": "object",
                                    "properties": {
                                        "key": {
                                            "type": "string"
                                        },
                                        "secret": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "registry": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "elasticsearch-exporter": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "envFromSecret": {
                    "type": "string"
                },
                "es": {
                    "type": "object",
                    "properties": {
                        "uri": {
                            "type": "string"
                        }
                    }
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "registry": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object",
                            "properties": {
                                "giantswarm.io/monitoring-path": {
                                    "type": "string"
                                },
                                "giantswarm.io/monitoring-port": {
                                    "type": "string"
                                }
                            }
                        },
                        "labels": {
                            "type": "object",
                            "properties": {
                                "giantswarm.io/monitoring": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "fluentd-elasticsearch": {
            "type": "object",
            "properties": {
                "configMaps": {
                    "type": "object",
                    "properties": {
                        "useDefaults": {
                            "type": "object",
                            "properties": {
                                "systemConf": {
                                    "type": "boolean"
                                },
                                "systemInputConf": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                },
                "elasticsearch": {
                    "type": "object",
                    "properties": {
                        "auth": {
                            "type": "object",
                            "properties": {
                                "enabled": {
                                    "type": "boolean"
                                }
                            }
                        },
                        "host": {
                            "type": "string"
                        },
                        "logstashPrefix": {
                            "type": "string"
                        },
                        "scheme": {
                            "type": "string"
                        },
                        "sslVerify": {
                            "type": "boolean"
                        }
                    }
                },
                "enabled": {
                    "type": "boolean"
                },
                "env": {
                    "type": "object",
                    "properties": {
                        "LD_PRELOAD": {
                            "type": "string"
                        }
                    }
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "registry": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "string"
                        }
                    }
                },
                "podSecurityPolicy": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "secret": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "secret_key": {
                                "type": "string"
                            },
                            "secret_name": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "global": {
            "type": "object",
            "properties": {
                "opendistro": {
                    "type": "object",
                    "properties": {
                        "es": {
                            "type": "object",
                            "properties": {
                                "client": {
                                    "type": "object",
                                    "properties": {
                                        "uri": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "registry": {
                    "type": "string"
                }
            }
        },
        "opendistro-certs": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "expiration": {
                    "type": "string"
                },
                "organization": {
                    "type": "string"
                }
            }
        }
    }
}
